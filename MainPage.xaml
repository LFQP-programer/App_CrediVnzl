<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             xmlns:helpers="clr-namespace:App_CrediVnzl.Helpers"
             x:Class="App_CrediVnzl.MainPage"
             BackgroundColor="{StaticResource Tertiary}"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="30"
            VerticalOptions="Center">
            
            <!-- Logo -->
            <Frame
                BackgroundColor="{StaticResource Surface}"
                CornerRadius="20"
                HasShadow="True"
                Padding="40"
                HorizontalOptions="Center"
                WidthRequest="280">
                <Image
                    Source="logo_credivzla.png"
                    HeightRequest="200"
                    Aspect="AspectFit"
                    HorizontalOptions="Center" />
            </Frame>

            <!-- Título del Sistema -->
            <Label
                Text="CrediVnzl - Sistema de Gestión de Préstamos"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="{StaticResource Surface}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,20" />

            <!-- Botón Administrador -->
            <Frame
                BackgroundColor="{StaticResource Surface}"
                CornerRadius="20"
                HasShadow="True"
                Padding="0"
                HeightRequest="90">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AdministradorCommand}" />
                </Frame.GestureRecognizers>
                
                <Grid ColumnDefinitions="80,*" Padding="15">
                    <!-- Icono -->
                    <Frame
                        Grid.Column="0"
                        BackgroundColor="{StaticResource Tertiary}"
                        CornerRadius="15"
                        HasShadow="False"
                        Padding="10"
                        HeightRequest="60"
                        WidthRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Image
                            Source="{x:Static helpers:IconPaths.Admin}"
                            WidthRequest="40"
                            HeightRequest="40"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>

                    <!-- Texto -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        VerticalOptions="Center"
                        Spacing="5">
                        <Label
                            Text="Administrador"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Text="Gestionar préstamos y clientes"
                            FontSize="14"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Botón Cliente -->
            <Frame
                BackgroundColor="{StaticResource Surface}"
                CornerRadius="20"
                HasShadow="True"
                Padding="0"
                HeightRequest="90">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClienteCommand}" />
                </Frame.GestureRecognizers>
                
                <Grid ColumnDefinitions="80,*" Padding="15">
                    <!-- Icono -->
                    <Frame
                        Grid.Column="0"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="15"
                        HasShadow="False"
                        Padding="10"
                        HeightRequest="60"
                        WidthRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Image
                            Source="{x:Static helpers:IconPaths.User}"
                            WidthRequest="40"
                            HeightRequest="40"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>

                    <!-- Texto -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        VerticalOptions="Center"
                        Spacing="5">
                        <Label
                            Text="Cliente"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Text="Ver mi préstamo y pagos"
                            FontSize="14"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
