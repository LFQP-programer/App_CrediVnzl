<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colores principales del logo CrediVnzl -->
    <Color x:Key="Primary">#FDB913</Color>
    <Color x:Key="PrimaryDark">#E5A000</Color>
    <Color x:Key="PrimaryLight">#FFD166</Color>
    
    <Color x:Key="Secondary">#E4002B</Color>
    <Color x:Key="SecondaryDark">#C10023</Color>
    <Color x:Key="SecondaryLight">#FF4757</Color>
    
    <Color x:Key="Tertiary">#003B7A</Color>
    <Color x:Key="TertiaryDark">#002855</Color>
    <Color x:Key="TertiaryLight">#1A5FA3</Color>

    <!-- Color Beige para tarjetas -->
    <Color x:Key="Beige">#E5D5A8</Color>
    <Color x:Key="BeigeLight">#F0E5C8</Color>
    <Color x:Key="BeigeDark">#D4C599</Color>

    <!-- Colores de fondo y superficie -->
    <Color x:Key="Background">#F5F5F5</Color>
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="Surface">#FFFFFF</Color>

    <!-- Colores base -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">#1A1A1A</Color>
    <Color x:Key="OffBlack">#0D0D0D</Color>
    
    <!-- Colores de estado -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#E4002B</Color>
    <Color x:Key="Info">#003B7A</Color>
    
    <!-- Colores adicionales -->
    <Color x:Key="Magenta">#D946EF</Color>
    <Color x:Key="MidnightBlue">#191970</Color>

    <!-- Escala de grises -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#1A1A1A</Color>
    
    <!-- Colores de texto -->
    <Color x:Key="PrimaryDarkText">#1A1A1A</Color>
    <Color x:Key="SecondaryDarkText">#757575</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="BeigeBrush" Color="{StaticResource Beige}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
</ResourceDictionary>