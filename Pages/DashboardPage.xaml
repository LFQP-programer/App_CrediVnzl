<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.DashboardPage"
             Title="Dashboard"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Contenido Principal del Dashboard -->
        <ScrollView BackgroundColor="#F5F5F5">
            <VerticalStackLayout Padding="0" Spacing="0">
                
                <!-- Header azul con logo y menú hamburguesa mejorado -->
                <Grid BackgroundColor="#2563EB" Padding="20,40,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Logo y texto con mejor accesibilidad -->
                    <HorizontalStackLayout Grid.Column="0" Spacing="12" VerticalOptions="Center">
                        <Frame BackgroundColor="White" 
                               CornerRadius="8" 
                               Padding="8" 
                               HasShadow="False"
                               VerticalOptions="Center">
                            <Image Source="logo_credivzla.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Aspect="AspectFit"
                                   SemanticProperties.Description="Logo de CrediVzla" />
                        </Frame>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="CrediVzla"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   SemanticProperties.HeadingLevel="Level1" />
                            <Label Text="Panel de Control"
                                   FontSize="13"
                                   TextColor="White"
                                   Opacity="0.9"
                                   SemanticProperties.Description="Subtítulo del dashboard" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Menú hamburguesa con mejor accesibilidad -->
                    <Button Grid.Column="1"
                            x:Name="MenuButton"
                            Text="☰"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="24"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="0"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            Clicked="OnMenuButtonClicked"
                            SemanticProperties.Description="Abrir menú de navegación"
                            SemanticProperties.Hint="Toca para mostrar las opciones del menú" />
                </Grid>

                <!-- Cards de estadísticas mejoradas con accesibilidad -->
                <Grid Padding="15" RowSpacing="12" ColumnSpacing="12" BackgroundColor="#F5F5F5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Clientes Card con mejor accesibilidad -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="90"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Tarjeta de estadística de clientes totales">
                        <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{StaticResource IconUsers}"
                                       FontSize="16"
                                       TextColor="#2563EB"
                                       VerticalOptions="Center"/>
                                <Label Text="Clientes"
                                       FontSize="12"
                                       TextColor="#666666"
                                       FontAttributes="None"
                                       VerticalOptions="Center"
                                       SemanticProperties.Description="Etiqueta de clientes" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding TotalClientes, FallbackValue='0'}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="NoWrap"
                                   SemanticProperties.Description="{Binding TotalClientes, StringFormat='Total de {0} clientes'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Activos Card con mejor accesibilidad -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="90"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Tarjeta de préstamos activos">
                        <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{StaticResource IconDocument}"
                                       FontSize="16"
                                       TextColor="#4CAF50"
                                       VerticalOptions="Center"/>
                                <Label Text="Activos"
                                       FontSize="12"
                                       TextColor="#666666"
                                       FontAttributes="None"
                                       VerticalOptions="Center"
                                       SemanticProperties.Description="Etiqueta de préstamos activos" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding PrestamosActivos, FallbackValue='0'}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="NoWrap"
                                   SemanticProperties.Description="{Binding PrestamosActivos, StringFormat='{0} préstamos activos'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Capital Card con mejor accesibilidad -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="90"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Tarjeta de capital disponible, toca para configurar">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ConfigurarCapitalCommand}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{StaticResource IconMoney}"
                                       FontSize="16"
                                       TextColor="#F59E0B"
                                       VerticalOptions="Center"/>
                                <Label Text="Capital"
                                       FontSize="12"
                                       TextColor="#666666"
                                       FontAttributes="None"
                                       VerticalOptions="Center"
                                       SemanticProperties.Description="Etiqueta de capital" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding CapitalInicial, StringFormat='${0:N0}', FallbackValue='$0'}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="TailTruncation"
                                   SemanticProperties.Description="{Binding CapitalInicial, StringFormat='Capital inicial de {0} pesos'}" />
                            <Label Text="{Binding CapitalDisponible, StringFormat='Disponible: ${0:N0}', FallbackValue='Disponible: $0'}"
                                   FontSize="10"
                                   TextColor="#F59E0B"
                                   FontAttributes="None"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="TailTruncation"
                                   SemanticProperties.Description="{Binding CapitalDisponible, StringFormat='Capital disponible: {0} pesos'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Ganancias Card con mejor accesibilidad -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="90"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Tarjeta de ganancias, toca para ver detalles">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding VerGananciasCommand}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{StaticResource IconTrendUp}"
                                       FontSize="16"
                                       TextColor="#10B981"
                                       VerticalOptions="Center"/>
                                <Label Text="Ganancias"
                                       FontSize="12"
                                       TextColor="#666666"
                                       FontAttributes="None"
                                       VerticalOptions="Center"
                                       SemanticProperties.Description="Etiqueta de ganancias" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding GananciaTotal, StringFormat='${0:N0}', FallbackValue='$0'}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="TailTruncation"
                                   SemanticProperties.Description="{Binding GananciaTotal, StringFormat='Ganancia total de {0} pesos'}" />
                            <Label Text="{Binding InteresesAcumulados, StringFormat='Pendiente: ${0:N0}', FallbackValue='Pendiente: $0'}"
                                   FontSize="10"
                                   TextColor="#2563EB"
                                   FontAttributes="None"
                                   HorizontalTextAlignment="Start"
                                   LineBreakMode="TailTruncation"
                                   SemanticProperties.Description="{Binding InteresesAcumulados, StringFormat='Intereses pendientes: {0} pesos'}" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Botones de menú centrados con iconos mejorados y accesibilidad -->
                <Grid Padding="15" RowSpacing="12" ColumnSpacing="12" BackgroundColor="#F5F5F5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Clientes Menu con accesibilidad -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="110"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Ir a la gestión de clientes">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClientesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                            <Frame BackgroundColor="#2563EB"
                                   CornerRadius="8"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Padding="0"
                                   HasShadow="False"
                                   HorizontalOptions="Center">
                                <Label Text="{StaticResource IconUsers}"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <Label Text="Clientes"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Gestionar"
                                   FontSize="11"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Calendario Menu con accesibilidad -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="110"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Ver calendario de pagos">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCalendarioTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                            <Frame BackgroundColor="#F59E0B"
                                   CornerRadius="8"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Padding="0"
                                   HasShadow="False"
                                   HorizontalOptions="Center">
                                <Label Text="{StaticResource IconCalendar}"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <Label Text="Calendario"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Pagos"
                                   FontSize="11"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Mensajes Menu con accesibilidad -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="110"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Enviar mensajes por WhatsApp">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMensajesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                            <Frame BackgroundColor="#EF4444"
                                   CornerRadius="8"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Padding="0"
                                   HasShadow="False"
                                   HorizontalOptions="Center">
                                <Label Text="{StaticResource IconWhatsApp}"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <Label Text="Mensajes"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="WhatsApp"
                                   FontSize="11"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Reportes Menu con accesibilidad -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           MinimumHeightRequest="110"
                           VerticalOptions="FillAndExpand"
                           SemanticProperties.Description="Ver reportes y estadísticas">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                            <Frame BackgroundColor="#2563EB"
                                   CornerRadius="8"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Padding="0"
                                   HasShadow="False"
                                   HorizontalOptions="Center">
                                <Label Text="{StaticResource IconChart}"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <Label Text="Reportes"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Estadísticas"
                                   FontSize="11"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Prestamos Activos Section -->
                <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#F5F5F5">
                    <Label Text="Préstamos Activos"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           SemanticProperties.HeadingLevel="Level2" />

                    <CollectionView ItemsSource="{Binding PrestamosActivosList}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout Padding="20" Spacing="10">
                                <Label Text="{StaticResource IconDocument}"
                                       FontSize="48"
                                       HorizontalOptions="Center"
                                       TextColor="#CCCCCC"
                                       SemanticProperties.Description="No hay préstamos activos" />
                                <Label Text="No hay préstamos activos"
                                       FontSize="16"
                                       TextColor="#666666"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White"
                                       CornerRadius="15"
                                       Padding="20"
                                       Margin="0,0,0,15"
                                       HasShadow="True">
                                    <!-- Contenido del préstamo activo igual que antes -->
                                    <Grid RowSpacing="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding ClienteNombre}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#333333" />

                                        <Frame Grid.Row="0" Grid.Column="1"
                                               BackgroundColor="#4CAF50"
                                               CornerRadius="12"
                                               Padding="10,5"
                                               HasShadow="False">
                                            <Label Text="{Binding PorcentajePagado, StringFormat='{0}%'}"
                                                   TextColor="White"
                                                   FontSize="14"
                                                   FontAttributes="Bold" />
                                        </Frame>

                                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding MontoInicial, StringFormat='${0:N2} inicial'}"
                                               FontSize="14"
                                               TextColor="#666666" />

                                        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding InteresSemanal, StringFormat='Interés semanal: ${0:N2}'}"
                                               FontSize="14"
                                               TextColor="#4CAF50" />

                                        <ProgressBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                     Progress="{Binding PorcentajePagado, Converter={StaticResource PercentageConverter}}"
                                                     ProgressColor="#4CAF50"
                                                     HeightRequest="8" />

                                        <HorizontalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                              Spacing="10">
                                            <Label Text="{Binding MontoPagado, StringFormat='Pagado: ${0:N2}'}"
                                                   FontSize="12"
                                                   TextColor="#4CAF50" />
                                            <Label Text="/"
                                                   FontSize="12"
                                                   TextColor="#666666" />
                                            <Label Text="{Binding MontoPendiente, StringFormat='${0:N2}'}"
                                                   FontSize="12"
                                                   TextColor="#666666" />
                                        </HorizontalStackLayout>

                                        <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding MontoPendiente, StringFormat='Pendiente: ${0:N2}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#FF5722"
                                               Margin="0,5,0,0" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Modal de Capital (Overlay) -->
        <Grid IsVisible="{Binding MostrarDialogoCapital}"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ZIndex="1000">
            
            <BoxView BackgroundColor="Black"
                     Opacity="0.6"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CancelarCapitalCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <Frame x:Name="ModalCapital"
                   BackgroundColor="White"
                   CornerRadius="20"
                   Padding="0"
                   Margin="20"
                   HasShadow="True"
                   MaximumWidthRequest="500"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Scale="0.9"
                   Opacity="0">
                
                <ScrollView>
                    <VerticalStackLayout Spacing="0">
                        
                        <Grid BackgroundColor="{StaticResource Primary}"
                              Padding="20"
                              ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="$ Configurar Capital"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="Gestiona tu capital de prestamos"
                                       FontSize="13"
                                       TextColor="White"
                                       Opacity="0.9" />
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="1"
                                    Text="✕"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="24"
                                    FontAttributes="Bold"
                                    WidthRequest="45"
                                    HeightRequest="45"
                                    CornerRadius="22"
                                    Padding="0"
                                    Command="{Binding CancelarCapitalCommand}" />
                        </Grid>

                        <VerticalStackLayout Padding="20" Spacing="20">
                            

                            <VerticalStackLayout Spacing="10">
                                <Label Text="Capital Total Inicial"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="#333333" />
                                
                                <Frame BackgroundColor="#F5F5F5"
                                       CornerRadius="12"
                                       Padding="0"
                                       HasShadow="False"
                                       BorderColor="#2563EB">
                                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="15">
                                        <Label Grid.Column="0"
                                               Text="$"
                                               FontSize="24"
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0" />
                                        <Entry Grid.Column="1"
                                               Placeholder="Ingresa el monto"
                                               Text="{Binding CapitalInicial}"
                                               Keyboard="Numeric"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#333333"
                                               BackgroundColor="Transparent"
                                               VerticalOptions="Center" />
                                        <Label Grid.Column="2"
                                               Text="$"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#2563EB"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Frame>
                                

                                <Label Text="• Ingresa el monto total que tienes disponible para prestar"
                                       FontSize="12"
                                       TextColor="#666666"
                                       Margin="5,0,0,0" />
                            </VerticalStackLayout>

                            <BoxView HeightRequest="1"
                                     Color="#E0E0E0"
                                     Margin="0,5,0,5" />

                            <VerticalStackLayout Spacing="15">
                                <Label Text="▣ Resumen de Capital"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="#333333" />
                                
                                <Frame BackgroundColor="#E8F5E9"
                                       CornerRadius="15"
                                       Padding="15"
                                       HasShadow="False"
                                       BorderColor="#4CAF50">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="Capital Disponible"
                                               FontSize="12"
                                               TextColor="#2E7D32" />
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding CapitalDisponible, StringFormat='${0:N2}'}"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#2E7D32" />
                                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                               Text="$"
                                               FontSize="40"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End" />
                                    </Grid>
                                </Frame>

                                <Frame BackgroundColor="#E3F2FD"
                                       CornerRadius="15"
                                       Padding="15"
                                       HasShadow="False"
                                       BorderColor="#2196F3">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="Capital en la Calle"
                                               FontSize="12"
                                               TextColor="#1565C0" />
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding CapitalEnCalle, StringFormat='${0:N2}'}"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#1565C0" />
                                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                               Text="▣"
                                               FontSize="40"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End" />
                                    </Grid>
                                </Frame>

                                <Frame BackgroundColor="#FFF3E0"
                                       CornerRadius="15"
                                       Padding="15"
                                       HasShadow="False"
                                       BorderColor="#FF9800">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="Ganancias Totales"
                                               FontSize="12"
                                               TextColor="#E65100" />
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding GananciaTotal, StringFormat='${0:N2}'}"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#E65100" />
                                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                               Text="↗"
                                               FontSize="40"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End" />
                                    </Grid>
                                </Frame>
                            </VerticalStackLayout>

                            <Frame BackgroundColor="#E8EAF6"
                                   CornerRadius="12"
                                   Padding="15"
                                   HasShadow="False"
                                   BorderColor="#3F51B5">
                                <VerticalStackLayout Spacing="8">
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="i"
                                               FontSize="18"
                                               VerticalOptions="Start" />
                                        <Label Text="¿Como funciona?"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#3F51B5"
                                               VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                    
                                    <Label Text="• El capital disponible se actualiza automáticamente al hacer préstamos"
                                           FontSize="12"
                                           TextColor="#424242"
                                           Margin="26,0,0,0" />
                                    <Label Text="• Las ganancias solo incluyen intereses cobrados"
                                           FontSize="12"
                                           TextColor="#424242"
                                           Margin="26,0,0,0" />
                                    <Label Text="• El capital regresa cuando cobras pagos al capital"
                                           FontSize="12"
                                           TextColor="#424242"
                                           Margin="26,0,0,0" />
                                </VerticalStackLayout>
                            </Frame>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
                                <Button Grid.Column="0"
                                        Text="← Cancelar"
                                        BackgroundColor="#E0E0E0"
                                        TextColor="#333333"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        CornerRadius="12"
                                        HeightRequest="55"
                                        Command="{Binding CancelarCapitalCommand}" />
                                
                                <Button Grid.Column="1"
                                        Text="✓ Guardar"
                                        BackgroundColor="#2563EB"
                                        TextColor="White"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        CornerRadius="12"
                                        HeightRequest="55"
                                        Command="{Binding GuardarCapitalCommand}" />
                            </Grid>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Frame>
        </Grid>

        <!-- Modal de Ganancias (Overlay) -->
        <Grid IsVisible="{Binding MostrarDialogoGanancias}"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ZIndex="1000">
            
            <BoxView BackgroundColor="Black"
                     Opacity="0.6"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CerrarGananciasCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <Frame x:Name="ModalGanancias"
                   BackgroundColor="White"
                   CornerRadius="20"
                   Padding="0"
                   Margin="20"
                   HasShadow="True"
                   MaximumWidthRequest="500"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Scale="0.9"
                   Opacity="0">
                
                <ScrollView>
                    <VerticalStackLayout Spacing="0">
                        
                        <Grid BackgroundColor="#FF9800"
                              Padding="20"
                              ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="↗ Resumen de Ganancias"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="Detalles de tus ingresos"
                                       FontSize="13"
                                       TextColor="White"
                                       Opacity="0.9" />
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="1"
                                    Text="✕"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="24"
                                    FontAttributes="Bold"
                                    WidthRequest="45"
                                    HeightRequest="45"
                                    CornerRadius="22"
                                    Padding="0"
                                    Command="{Binding CerrarGananciasCommand}" />
                        </Grid>

                        <VerticalStackLayout Padding="20" Spacing="20">
                            
                            <Frame BackgroundColor="#FFF3E0"
                                   CornerRadius="15"
                                   Padding="20"
                                   HasShadow="False"
                                   BorderColor="#FF9800">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                        <Label Text="Ganancias Totales"
                                               FontSize="14"
                                               TextColor="#E65100" />
                                        <Label Text="{Binding GananciaTotal, StringFormat='${0:N2}'}"
                                               FontSize="36"
                                               FontAttributes="Bold"
                                               TextColor="#E65100" />
                                        <Label Text="Total de intereses cobrados"
                                               FontSize="12"
                                               TextColor="#757575" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1"
                                           Text="$"
                                           FontSize="60"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Frame>

                            <Frame BackgroundColor="#E3F2FD"
                                   CornerRadius="15"
                                   Padding="20"
                                   HasShadow="False"
                                   BorderColor="#2196F3">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                        <Label Text="Intereses Pendientes"
                                               FontSize="14"
                                               TextColor="#1565C0" />
                                        <Label Text="{Binding InteresesAcumulados, StringFormat='${0:N2}'}"
                                               FontSize="36"
                                               FontAttributes="Bold"
                                               TextColor="#1565C0" />
                                        <Label Text="Por cobrar de préstamos activos"
                                               FontSize="12"
                                               TextColor="#757575" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1"
                                           Text="○"
                                           FontSize="60"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Frame>

                            <BoxView HeightRequest="1"
                                     Color="#E0E0E0" />

                            <VerticalStackLayout Spacing="15">
                                <Label Text="▣ Desglose Detallado"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="#333333" />
                                
                                <Frame BackgroundColor="White"
                                       CornerRadius="12"
                                       Padding="15"
                                       HasShadow="False"
                                       BorderColor="#E0E0E0">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                                        
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="Capital en la calle"
                                               FontSize="13"
                                               TextColor="#666666" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding CapitalEnCalle, StringFormat='${0:N2}'}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#333333" />
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="Préstamos activos"
                                               FontSize="13"
                                               TextColor="#666666" />
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding PrestamosActivos}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#333333" />
                                        
                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="Total de clientes"
                                               FontSize="13"
                                               TextColor="#666666" />
                                        <Label Grid.Row="2" Grid.Column="1"
                                               Text="{Binding TotalClientes}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#333333" />
                                        
                                        <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                HeightRequest="1"
                                                Color="#E0E0E0"
                                                Margin="0,8,0,8" />
                                    </Grid>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Text="✓ Cerrar"
                                    BackgroundColor="#FF9800"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    CornerRadius="12"
                                    HeightRequest="55"
                                    Command="{Binding CerrarGananciasCommand}" />

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>
