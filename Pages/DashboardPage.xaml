<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.DashboardPage"
             Title="CrediVnzl"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">
            
            <!-- Header -->
            <Grid BackgroundColor="{StaticResource Tertiary}" Padding="20,40,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="CrediVnzl"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Panel de Control"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </VerticalStackLayout>

                <Frame Grid.Column="1"
                       BackgroundColor="Transparent"
                       BorderColor="{StaticResource White}"
                       CornerRadius="8"
                       Padding="8"
                       HasShadow="False"
                       WidthRequest="50"
                       HeightRequest="50"
                       VerticalOptions="Center">
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                        <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                        <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Dashboard Cards Grid -->
            <Grid Padding="15,20" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Clientes Card -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="{StaticResource Beige}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Clientes"
                               FontSize="12"
                               TextColor="{StaticResource Gray800}"
                               Opacity="0.9" />
                        <Label Text="{Binding TotalClientes}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Activos Card -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="{StaticResource Beige}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Activos"
                               FontSize="12"
                               TextColor="{StaticResource Gray800}"
                               Opacity="0.9" />
                        <Label Text="{Binding PrestamosActivos}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Capital en la Calle Card -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="{StaticResource Beige}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Capital"
                               FontSize="12"
                               TextColor="{StaticResource Gray800}"
                               Opacity="0.9" />
                        <Label Text="{Binding CapitalEnCalle, StringFormat='${0:N0}'}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}"
                               LineBreakMode="TailTruncation" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Intereses Acumulados Card -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="{StaticResource Beige}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Intereses"
                               FontSize="12"
                               TextColor="{StaticResource Gray800}"
                               Opacity="0.9" />
                        <Label Text="{Binding InteresesAcumulados, StringFormat='${0:N0}'}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}"
                               LineBreakMode="TailTruncation" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Menu Cards Grid -->
            <Grid Padding="15,0,15,20" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Clientes Menu -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="18"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClientesTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ‘¥"
                               FontSize="36"
                               HorizontalOptions="Start" />
                        <Label Text="Clientes"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                        <Label Text="Gestionar"
                               FontSize="11"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Calendario Menu -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="18"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCalendarioTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ“…"
                               FontSize="36"
                               HorizontalOptions="Start" />
                        <Label Text="Calendario"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                        <Label Text="Pagos"
                               FontSize="11"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Mensajes Menu -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="18"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMensajesTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ’¬"
                               FontSize="36"
                               HorizontalOptions="Start" />
                        <Label Text="Mensajes"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                        <Label Text="WhatsApp"
                               FontSize="11"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Reportes Menu -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="18"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ“Š"
                               FontSize="36"
                               HorizontalOptions="Start" />
                        <Label Text="Reportes"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                        <Label Text="Estadisticas"
                               FontSize="11"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Prestamos Activos Section -->
            <VerticalStackLayout Padding="15,20" Spacing="15">
                <Label Text="Prestamos Activos"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}" />

                <CollectionView ItemsSource="{Binding PrestamosActivosList}">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="20" Spacing="10">
                            <Label Text="ðŸ“"
                                   FontSize="48"
                                   HorizontalOptions="Center" />
                            <Label Text="No hay prestamos activos"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{StaticResource White}"
                                   CornerRadius="15"
                                   Padding="20"
                                   Margin="0,0,0,15"
                                   HasShadow="True">
                                <Grid RowSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Nombre Cliente -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding ClienteNombre}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}" />

                                    <!-- Porcentaje Badge -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{StaticResource Success}"
                                           CornerRadius="12"
                                           Padding="10,5"
                                           HasShadow="False">
                                        <Label Text="{Binding PorcentajePagado, StringFormat='{0}%'}"
                                               TextColor="{StaticResource White}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                    </Frame>

                                    <!-- Monto Inicial -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoInicial, StringFormat='${0:N2} inicial'}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}" />

                                    <!-- Interes Semanal -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding InteresSemanal, StringFormat='Interes semanal: ${0:N2}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource Success}" />

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Progress="{Binding PorcentajePagado, Converter={StaticResource PercentageConverter}}"
                                                 ProgressColor="{StaticResource Success}"
                                                 HeightRequest="8" />

                                    <!-- Pagos -->
                                    <HorizontalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                          Spacing="10">
                                        <Label Text="{Binding MontoPagado, StringFormat='Pagado: ${0:N2}'}"
                                               FontSize="12"
                                               TextColor="{StaticResource Success}" />
                                        <Label Text="/"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Text="{Binding MontoPendiente, StringFormat='${0:N2}'}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                    </HorizontalStackLayout>

                                    <!-- Pendiente -->
                                    <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoPendiente, StringFormat='Pendiente: ${0:N2}'}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#FF5722"
                                           Margin="0,5,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
