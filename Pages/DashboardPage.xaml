<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.DashboardPage"
             Title="CrediVnzl"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">
            
            <!-- Header -->
            <Grid BackgroundColor="#2196F3" Padding="20,40,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="CrediVnzl"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Panel de Control"
                           FontSize="14"
                           TextColor="#E3F2FD" />
                </VerticalStackLayout>

                <Frame Grid.Column="1"
                       BackgroundColor="Transparent"
                       BorderColor="White"
                       CornerRadius="8"
                       Padding="8"
                       HasShadow="False"
                       WidthRequest="50"
                       HeightRequest="50"
                       VerticalOptions="Center">
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <BoxView Color="White" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                        <BoxView Color="White" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                        <BoxView Color="White" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Dashboard Cards Grid -->
            <Grid Padding="15,20" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Clientes Card -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="#2196F3"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Clientes"
                               FontSize="14"
                               TextColor="White" />
                        <Label Text="{Binding TotalClientes}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Activos Card -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="#4CAF50"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Activos"
                               FontSize="14"
                               TextColor="White" />
                        <Label Text="{Binding PrestamosActivos}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Capital en la Calle Card -->
                <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       BackgroundColor="#9C27B0"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Capital en la Calle"
                               FontSize="14"
                               TextColor="White" />
                        <Label Text="{Binding CapitalEnCalle, StringFormat='${0:N2}'}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Intereses Acumulados Card -->
            <Frame Margin="15,0,15,15"
                   BackgroundColor="#FF5722"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Intereses Acumulados"
                           FontSize="14"
                           TextColor="White" />
                    <Label Text="{Binding InteresesAcumulados, StringFormat='${0:N2}'}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- Menu Cards Grid -->
            <Grid Padding="15,0" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Clientes Menu -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClientesTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Frame BackgroundColor="#2196F3"
                               CornerRadius="12"
                               Padding="15"
                               HasShadow="False"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Start">
                            <Label Text="C"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Clientes"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                        <Label Text="Gestionar clientes"
                               FontSize="12"
                               TextColor="#757575" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Calendario Menu -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCalendarioTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Frame BackgroundColor="#4CAF50"
                               CornerRadius="12"
                               Padding="15"
                               HasShadow="False"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Start">
                            <Label Text="Cal"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Calendario"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                        <Label Text="Pagos programados"
                               FontSize="12"
                               TextColor="#757575" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Mensajes Menu -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMensajesTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Frame BackgroundColor="#9C27B0"
                               CornerRadius="12"
                               Padding="15"
                               HasShadow="False"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Start">
                            <Label Text="M"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Mensajes"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                        <Label Text="Enviar recordatorios"
                               FontSize="12"
                               TextColor="#757575" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Reportes Menu -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Frame BackgroundColor="#FF5722"
                               CornerRadius="12"
                               Padding="15"
                               HasShadow="False"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Start">
                            <Label Text="R"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Reportes"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                        <Label Text="Estadisticas"
                               FontSize="12"
                               TextColor="#757575" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Prestamos Activos Section -->
            <VerticalStackLayout Padding="15,20" Spacing="15">
                <Label Text="Prestamos Activos"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#212121" />

                <CollectionView ItemsSource="{Binding PrestamosActivosList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="15"
                                   Padding="20"
                                   Margin="0,0,0,15"
                                   HasShadow="True">
                                <Grid RowSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Nombre Cliente -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding ClienteNombre}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#212121" />

                                    <!-- Porcentaje Badge -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="#4CAF50"
                                           CornerRadius="12"
                                           Padding="10,5"
                                           HasShadow="False">
                                        <Label Text="{Binding PorcentajePagado, StringFormat='{0}%'}"
                                               TextColor="White"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                    </Frame>

                                    <!-- Monto Inicial -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoInicial, StringFormat='S/{0:N2} inicial'}"
                                           FontSize="14"
                                           TextColor="#757575" />

                                    <!-- Interes Semanal -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding InteresSemanal, StringFormat='Interes semanal: S/{0:N2}'}"
                                           FontSize="14"
                                           TextColor="#4CAF50" />

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Progress="{Binding PorcentajePagado, Converter={StaticResource PercentageConverter}}"
                                                 ProgressColor="#4CAF50"
                                                 HeightRequest="8" />

                                    <!-- Pagos -->
                                    <HorizontalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                          Spacing="10">
                                        <Label Text="{Binding MontoPagado, StringFormat='Pagado: S/{0:N2}'}"
                                               FontSize="12"
                                               TextColor="#4CAF50" />
                                        <Label Text="/"
                                               FontSize="12"
                                               TextColor="#757575" />
                                        <Label Text="{Binding MontoPendiente, StringFormat='S/{0:N2}'}"
                                               FontSize="12"
                                               TextColor="#757575" />
                                    </HorizontalStackLayout>

                                    <!-- Pendiente -->
                                    <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoPendiente, StringFormat='Pendiente: S/{0:N2}'}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#FF5722"
                                           Margin="0,5,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
