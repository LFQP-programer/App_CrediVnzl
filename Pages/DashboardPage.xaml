<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             xmlns:helpers="clr-namespace:App_CrediVnzl.Helpers"
             x:Class="App_CrediVnzl.Pages.DashboardPage"
             Title="CrediVnzl"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:PercentageConverter x:Key="PercentageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Contenido Principal del Dashboard -->
        <ScrollView>
            <VerticalStackLayout Padding="0" Spacing="0">
                
                <!-- Header -->
                <Grid BackgroundColor="{StaticResource Tertiary}" Padding="20,40,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="CrediVnzl"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}" />
                        <Label Text="Panel de Control"
                               FontSize="14"
                               TextColor="{StaticResource White}"
                               Opacity="0.9" />
                    </VerticalStackLayout>

                    <!-- Indicador de Sesión -->
                    <Frame Grid.Column="1"
                           BackgroundColor="{StaticResource Primary}"
                           CornerRadius="8"
                           Padding="10,5"
                           HasShadow="False"
                           VerticalOptions="Center"
                           Margin="0,0,10,0">
                        <HorizontalStackLayout Spacing="6">
                            <Image Source="{x:Static helpers:IconPaths.Admin}"
                                   WidthRequest="16"
                                   HeightRequest="16"
                                   VerticalOptions="Center" />
                            <Label Text="Administrador"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Tertiary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Menú Hamburguesa -->
                    <Frame Grid.Column="2"
                           BackgroundColor="Transparent"
                           BorderColor="{StaticResource White}"
                           CornerRadius="8"
                           Padding="8"
                           HasShadow="False"
                           WidthRequest="50"
                           HeightRequest="50"
                           VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMenuHamburgesaTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                            <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                            <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                            <BoxView Color="{StaticResource White}" HeightRequest="3" WidthRequest="30" CornerRadius="1.5" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Dashboard Cards Grid -->
                <Grid Padding="15,20" RowSpacing="12" ColumnSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Clientes Card -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="{StaticResource Beige}"
                           CornerRadius="20"
                           Padding="15"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout Spacing="6">
                                <Image Source="{x:Static helpers:IconPaths.Users}"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center" />
                                <Label Text="Clientes"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray800}"
                                       Opacity="0.9"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding TotalClientes}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="Morosos:"
                                       FontSize="10"
                                       TextColor="{StaticResource Gray700}" />
                                <Label Text="{Binding ClientesMorosos}"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Secondary}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Préstamos Activos Card -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="{StaticResource Beige}"
                           CornerRadius="20"
                           Padding="15"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout Spacing="6">
                                <Image Source="{x:Static helpers:IconPaths.Document}"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center" />
                                <Label Text="Préstamos"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray800}"
                                       Opacity="0.9"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding PrestamosActivos}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="Vencidos:"
                                       FontSize="10"
                                       TextColor="{StaticResource Gray700}" />
                                <Label Text="{Binding PrestamosVencidos}"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Secondary}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Capital Card -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="{StaticResource Beige}"
                           CornerRadius="20"
                           Padding="15"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ConfigurarCapitalCommand}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout Spacing="6">
                                <Image Source="{x:Static helpers:IconPaths.Money}"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center" />
                                <Label Text="Capital"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray800}"
                                       Opacity="0.9"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding CapitalInvertido, StringFormat='${0:N0}'}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   LineBreakMode="TailTruncation" />
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="Disponible:"
                                       FontSize="10"
                                       TextColor="{StaticResource Gray700}" />
                                <Label Text="{Binding CapitalDisponible, StringFormat='${0:N0}'}"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Success}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Ganancias Card -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="{StaticResource Beige}"
                           CornerRadius="20"
                           Padding="15"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding VerGananciasCommand}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout Spacing="6">
                                <Image Source="{x:Static helpers:IconPaths.Chart}"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center" />
                                <Label Text="Ganancias"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray800}"
                                       Opacity="0.9"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding GananciaCobrada, StringFormat='${0:N0}'}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   LineBreakMode="TailTruncation" />
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="Pendiente:"
                                       FontSize="10"
                                       TextColor="{StaticResource Gray700}" />
                                <Label Text="{Binding GananciaPendiente, StringFormat='${0:N0}'}"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Warning}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Menu Cards Grid -->
                <Grid Padding="15,0,15,20" RowSpacing="12" ColumnSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Clientes Menu -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="20"
                           Padding="18"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClientesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Image Source="{x:Static helpers:IconPaths.Users}"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   HorizontalOptions="Start" />
                            <Label Text="Clientes"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="Gestionar"
                                   FontSize="11"
                                   TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Calendario Menu -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="20"
                           Padding="18"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCalendarioTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Image Source="{x:Static helpers:IconPaths.Calendar}"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   HorizontalOptions="Start" />
                            <Label Text="Calendario"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="Pagos"
                                   FontSize="11"
                                   TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Mensajes Menu -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="20"
                           Padding="18"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMensajesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Image Source="{x:Static helpers:IconPaths.Message}"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   HorizontalOptions="Start" />
                            <Label Text="Mensajes"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="WhatsApp"
                                   FontSize="11"
                                   TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Reportes Menu -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="20"
                           Padding="18"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportesTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Image Source="{x:Static helpers:IconPaths.Report}"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   HorizontalOptions="Start" />
                            <Label Text="Reportes"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="Estadísticas"
                                   FontSize="11"
                                   TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Prestamos Activos Section -->
                <VerticalStackLayout Padding="15,20" Spacing="15">
                    
                    <!-- Header con Botón Nuevo Préstamo -->
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Préstamos Activos"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}"
                               VerticalOptions="Center" />
                        
                        <!-- Botón Nuevo Préstamo -->
                        <Button Grid.Column="1"
                                Text="+ Nuevo"
                                FontSize="14"
                                FontAttributes="Bold"
                                BackgroundColor="{StaticResource Success}"
                                TextColor="White"
                                CornerRadius="12"
                                Padding="15,10"
                                Clicked="OnNuevoPrestamoTapped" />
                    </Grid>

                    <CollectionView ItemsSource="{Binding PrestamosActivosList}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout Padding="40,20" Spacing="15">
                                <Image Source="{x:Static helpers:IconPaths.Document}"
                                       WidthRequest="48"
                                       HeightRequest="48"
                                       HorizontalOptions="Center" />
                                <Label Text="No hay préstamos activos"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray600}"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="Crea tu primer préstamo usando el botón de arriba"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray500}"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{StaticResource White}"
                                       CornerRadius="15"
                                       Padding="15"
                                       Margin="0,0,0,12"
                                       HasShadow="True"
                                       BorderColor="{Binding EstadoColor}">
                                    
                                    <Grid RowSpacing="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Fila 1: Nombre y Estado -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                            <Label Grid.Column="0"
                                                   Text="{Binding ClienteNombre}"
                                                   FontSize="17"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gray900}"
                                                   VerticalOptions="Center" />
                                            
                                            <Frame Grid.Column="1"
                                                   BackgroundColor="{Binding EstadoColor}"
                                                   CornerRadius="10"
                                                   Padding="10,5"
                                                   HasShadow="False">
                                                <Label Text="{Binding EstadoTexto}"
                                                       TextColor="White"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                            </Frame>
                                        </Grid>

                                        <!-- Fila 2: Cuota y Fecha -->
                                        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <VerticalStackLayout Grid.Column="0" Spacing="3">
                                                <Label Text="Cuota"
                                                       FontSize="11"
                                                       TextColor="{StaticResource Gray600}" />
                                                <HorizontalStackLayout Spacing="5">
                                                    <Image Source="{x:Static helpers:IconPaths.Money}"
                                                           WidthRequest="16"
                                                           HeightRequest="16"
                                                           VerticalOptions="Center" />
                                                    <Label Text="{Binding CuotaSemanal, StringFormat='${0:N0}'}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="{StaticResource Gray900}"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="3">
                                                <Label Text="Vencimiento"
                                                       FontSize="11"
                                                       TextColor="{StaticResource Gray600}" />
                                                <HorizontalStackLayout Spacing="5">
                                                    <Image Source="{x:Static helpers:IconPaths.Calendar}"
                                                           WidthRequest="16"
                                                           HeightRequest="16"
                                                           VerticalOptions="Center" />
                                                    <Label Text="{Binding FechaVencimiento, StringFormat='{0:dd/MM}'}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="{StaticResource Gray900}"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Fila 3: Progreso y Deuda -->
                                        <VerticalStackLayout Grid.Row="2" Spacing="8">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding MontoPagado, StringFormat='Pagado: ${0:N0}'}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource Success}" />
                                                <Label Grid.Column="1"
                                                       Text="{Binding MontoPendiente, StringFormat='Deuda: ${0:N0}'}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource Secondary}" />
                                            </Grid>

                                            <ProgressBar Progress="{Binding PorcentajePagado, Converter={StaticResource PercentageConverter}}"
                                                         ProgressColor="{Binding EstadoColor}"
                                                         HeightRequest="6" />
                                        </VerticalStackLayout>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Overlay y Popup de Capital -->
        <BoxView x:Name="OverlayCapital"
                 BackgroundColor="Black"
                 Opacity="0.5"
                 IsVisible="{Binding MostrarDialogoCapital}"
                 InputTransparent="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CancelarCapitalCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Border x:Name="PopupCapital"
                BackgroundColor="{StaticResource White}"
                StrokeThickness="0"
                Padding="25"
                IsVisible="{Binding MostrarDialogoCapital}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="340"
                InputTransparent="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            
            <VerticalStackLayout Spacing="20">
                <Label Text="Configurar Capital"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="8">
                    <Label Text="Capital Inicial"
                           FontSize="14"
                           TextColor="{StaticResource Gray700}" />
                    <Frame BackgroundColor="{StaticResource Beige}"
                           Padding="12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Entry Text="{Binding CapitalInicial}"
                               Keyboard="Numeric"
                               Placeholder="0.00"
                               TextColor="{StaticResource Gray900}"
                               PlaceholderColor="{StaticResource Gray600}"
                               BackgroundColor="Transparent" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8">
                    <Label Text="Capital Disponible"
                           FontSize="14"
                           TextColor="{StaticResource Gray700}" />
                    <Frame BackgroundColor="{StaticResource Beige}"
                           Padding="12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Label Text="{Binding CapitalDisponible, StringFormat='${0:N2}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Success}" />
                    </Frame>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0"
                            Text="Cancelar"
                            BackgroundColor="{StaticResource Gray300}"
                            TextColor="{StaticResource Gray900}"
                            CornerRadius="10"
                            Padding="15,10"
                            Command="{Binding CancelarCapitalCommand}" />
                    
                    <Button Grid.Column="1"
                            Text="Guardar"
                            BackgroundColor="{StaticResource Success}"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="15,10"
                            Command="{Binding GuardarCapitalCommand}" />
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Overlay y Popup de Ganancias -->
        <BoxView x:Name="OverlayGanancias"
                 BackgroundColor="Black"
                 Opacity="0.5"
                 IsVisible="{Binding MostrarDialogoGanancias}"
                 InputTransparent="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CerrarGananciasCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Border x:Name="PopupGanancias"
                BackgroundColor="{StaticResource White}"
                StrokeThickness="0"
                Padding="25"
                IsVisible="{Binding MostrarDialogoGanancias}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="340"
                InputTransparent="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            
            <VerticalStackLayout Spacing="20">
                <Label Text="Detalle de Ganancias"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="15">
                    <Frame BackgroundColor="{StaticResource Success}"
                           Padding="15"
                           HasShadow="False"
                           CornerRadius="12">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Ganancia Cobrada"
                                   FontSize="13"
                                   TextColor="White"
                                   Opacity="0.9" />
                            <Label Text="{Binding GananciaCobrada, StringFormat='${0:N2}'}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame BackgroundColor="{StaticResource Warning}"
                           Padding="15"
                           HasShadow="False"
                           CornerRadius="12">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Ganancia Pendiente"
                                   FontSize="13"
                                   TextColor="White"
                                   Opacity="0.9" />
                            <Label Text="{Binding GananciaPendiente, StringFormat='${0:N2}'}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame BackgroundColor="{StaticResource Tertiary}"
                           Padding="15"
                           HasShadow="False"
                           CornerRadius="12">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Ganancia Total"
                                   FontSize="13"
                                   TextColor="White"
                                   Opacity="0.9" />
                            <Label Text="{Binding GananciaTotal, StringFormat='${0:N2}'}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <Button Text="Cerrar"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource Tertiary}"
                        CornerRadius="10"
                        Padding="15,10"
                        Command="{Binding CerrarGananciasCommand}" />
            </VerticalStackLayout>
        </Border>

        <!-- Overlay y Menú Hamburguesa -->
        <BoxView x:Name="OverlayMenu"
                 BackgroundColor="Black"
                 Opacity="0.5"
                 IsVisible="{Binding MostrarMenuHamburguesa}"
                 InputTransparent="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayMenuTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Border x:Name="MenuHamburguesa"
                BackgroundColor="{StaticResource White}"
                StrokeThickness="0"
                IsVisible="{Binding MostrarMenuHamburguesa}"
                HorizontalOptions="End"
                VerticalOptions="Fill"
                WidthRequest="280"
                InputTransparent="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0" />
            </Border.StrokeShape>
            
            <VerticalStackLayout Padding="0" Spacing="0">
                <!-- Header del Menú -->
                <Frame BackgroundColor="{StaticResource Tertiary}"
                       Padding="20"
                       HasShadow="False"
                       CornerRadius="0">
                    <VerticalStackLayout Spacing="10">
                        <Image Source="{x:Static helpers:IconPaths.Admin}"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Start" />
                        <Label Text="Administrador"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}" />
                        <Label Text="Panel de Control"
                               FontSize="13"
                               TextColor="{StaticResource White}"
                               Opacity="0.9" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Opciones del Menú -->
                <VerticalStackLayout Padding="10,20" Spacing="5">
                    
                    <!-- Perfil -->
                    <Frame BackgroundColor="Transparent"
                           Padding="15,12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPerfilTapped" />
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12">
                            <Image Source="{x:Static helpers:IconPaths.User}"
                                   WidthRequest="22"
                                   HeightRequest="22"
                                   VerticalOptions="Center" />
                            <Label Text="Mi Perfil"
                                   FontSize="15"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Configuración -->
                    <Frame BackgroundColor="Transparent"
                           Padding="15,12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnConfiguracionTapped" />
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12">
                            <Image Source="{x:Static helpers:IconPaths.Settings}"
                                   WidthRequest="22"
                                   HeightRequest="22"
                                   VerticalOptions="Center" />
                            <Label Text="Configuración"
                                   FontSize="15"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Ayuda -->
                    <Frame BackgroundColor="Transparent"
                           Padding="15,12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAyudaTapped" />
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12">
                            <Image Source="{x:Static helpers:IconPaths.Info}"
                                   WidthRequest="22"
                                   HeightRequest="22"
                                   VerticalOptions="Center" />
                            <Label Text="Ayuda"
                                   FontSize="15"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Separador -->
                    <BoxView Color="{StaticResource Gray300}"
                             HeightRequest="1"
                             Margin="15,10" />

                    <!-- Cerrar Sesión -->
                    <Frame BackgroundColor="Transparent"
                           Padding="15,12"
                           HasShadow="False"
                           CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCerrarSesionTapped" />
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12">
                            <Image Source="{x:Static helpers:IconPaths.Exit}"
                                   WidthRequest="22"
                                   HeightRequest="22"
                                   VerticalOptions="Center" />
                            <Label Text="Cerrar Sesión"
                                   FontSize="15"
                                   TextColor="{StaticResource Secondary}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>
