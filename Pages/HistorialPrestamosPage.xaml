<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.HistorialPrestamosPage"
             Title="Historial de Prestamos"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{StaticResource Tertiary}"
             Shell.ForegroundColor="{StaticResource White}"
             Shell.TitleColor="{StaticResource White}"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Frame BackgroundColor="{StaticResource Surface}"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="{StaticResource Primary}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding ClienteNombre}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#212121" />
                    
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        <Frame Grid.Column="0"
                               BackgroundColor="#E3F2FD"
                               CornerRadius="10"
                               Padding="10"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Total"
                                       FontSize="11"
                                       TextColor="#757575"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding TotalPrestamos}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#2196F3"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <Frame Grid.Column="1"
                               BackgroundColor="#E8F5E9"
                               CornerRadius="10"
                               Padding="10"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Activos"
                                       FontSize="11"
                                       TextColor="#757575"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding PrestamosActivos}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#4CAF50"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <Frame Grid.Column="2"
                               BackgroundColor="#F3E5F5"
                               CornerRadius="10"
                               Padding="10"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Completados"
                                       FontSize="11"
                                       TextColor="#757575"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding PrestamosCompletados}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#9C27B0"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <BoxView HeightRequest="1"
                            Color="#E0E0E0"
                            Margin="0,10,0,0" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Total prestado historico:"
                               FontSize="14"
                               TextColor="#757575" />
                        <Label Grid.Column="1"
                               Text="{Binding TotalPrestadoHistorico, StringFormat='S/{0:N2}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#2196F3" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Total interes generado:"
                               FontSize="14"
                               TextColor="#757575" />
                        <Label Grid.Column="1"
                               Text="{Binding TotalInteresGenerado, StringFormat='S/{0:N2}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#4CAF50" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Todos"
                        BackgroundColor="{Binding FiltroSeleccionado, Converter={StaticResource FiltroToColorConverter}, ConverterParameter='Todos'}"
                        TextColor="{StaticResource White}"
                        FontSize="13"
                        CornerRadius="15"
                        Padding="15,8"
                        Command="{Binding FiltrarCommand}"
                        CommandParameter="Todos" />

                <Button Text="Activos"
                        BackgroundColor="{Binding FiltroSeleccionado, Converter={StaticResource FiltroToColorConverter}, ConverterParameter='Activo'}"
                        TextColor="{StaticResource White}"
                        FontSize="13"
                        CornerRadius="15"
                        Padding="15,8"
                        Command="{Binding FiltrarCommand}"
                        CommandParameter="Activo" />

                <Button Text="Completados"
                        BackgroundColor="{Binding FiltroSeleccionado, Converter={StaticResource FiltroToColorConverter}, ConverterParameter='Completado'}"
                        TextColor="{StaticResource White}"
                        FontSize="13"
                        CornerRadius="15"
                        Padding="15,8"
                        Command="{Binding FiltrarCommand}"
                        CommandParameter="Completado" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding PrestamosFiltrados}">
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout Padding="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                            <Label Text="&#x1F4C4;"
                                   FontSize="60"
                                   HorizontalOptions="Center" />
                            <Label Text="No hay prestamos"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   TextColor="#757575"
                                   Margin="0,10,0,0" />
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="20"
                               Margin="0,0,0,15"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HistorialPrestamosViewModel}}, Path=ToggleExpandirCommand}"
                                                             CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                    
                                    <VerticalStackLayout Grid.Column="0" Spacing="3">
                                        <Label Text="{Binding MontoInicial, StringFormat='S/{0:N2}'}"
                                               FontSize="22"
                                               FontAttributes="Bold"
                                               TextColor="#212121" />
                                        <Label Text="{Binding FechaInicio, StringFormat='Inicio: {0:dd/MM/yyyy}'}"
                                               FontSize="13"
                                               TextColor="#757575" />
                                        <Label Text="ðŸ‘† Toca para mÃ¡s detalles"
                                               FontSize="11"
                                               TextColor="#9E9E9E"
                                               IsVisible="{Binding Expandido, Converter={StaticResource InvertBoolConverter}}" />
                                    </VerticalStackLayout>

                                    <Frame Grid.Column="1"
                                           BackgroundColor="{Binding Estado, Converter={StaticResource EstadoToColorConverter}}"
                                           CornerRadius="12"
                                           Padding="10,5"
                                           HasShadow="False"
                                           VerticalOptions="Start">
                                        <Label Text="{Binding Estado}"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Frame>
                                </Grid>

                                <!-- Contenido expandible -->
                                <VerticalStackLayout Spacing="12" IsVisible="{Binding Expandido}">
                                    <BoxView HeightRequest="1"
                                            Color="#E0E0E0" />

                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="Capital pendiente:"
                                               FontSize="13"
                                               TextColor="#757575" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding CapitalPendiente, StringFormat='S/{0:N2}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#FF5722" />

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="InterÃ©s acumulado:"
                                               FontSize="13"
                                               TextColor="#757575" />
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding InteresAcumulado, StringFormat='S/{0:N2}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#FF9800" />

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="Total pagado:"
                                               FontSize="13"
                                               TextColor="#757575" />
                                        <Label Grid.Row="2" Grid.Column="1"
                                               Text="{Binding MontoPagado, StringFormat='S/{0:N2}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50" />

                                        <Label Grid.Row="3" Grid.Column="0"
                                               Text="DuraciÃ³n:"
                                               FontSize="13"
                                               TextColor="#757575" />
                                        <Label Grid.Row="3" Grid.Column="1"
                                               Text="{Binding SemanasTranscurridas, StringFormat='{0} semanas'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#2196F3" />
                                    </Grid>

                                    <ProgressBar Progress="{Binding PorcentajePagado, Converter={StaticResource PercentageConverter}}"
                                                ProgressColor="#4CAF50"
                                                Margin="0,5,0,0" />

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="Progreso:"
                                               FontSize="12"
                                               TextColor="#757575" />
                                        <Label Text="{Binding PorcentajePagado, StringFormat='{0}%'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50" />
                                    </HorizontalStackLayout>

                                    <!-- Notas del Prestamo -->
                                    <Frame BackgroundColor="#E3F2FD"
                                           CornerRadius="10"
                                           Padding="15"
                                           HasShadow="False"
                                           BorderColor="#2196F3"
                                           IsVisible="{Binding Notas, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                                        <VerticalStackLayout Spacing="8">
                                            <Label Text="ðŸ“ Historial de transacciones:"
                                                   FontSize="13"
                                                   FontAttributes="Bold"
                                                   TextColor="#1976D2" />
                                            <Label Text="{Binding Notas}"
                                                   FontSize="12"
                                                   TextColor="#424242"
                                                   LineBreakMode="WordWrap" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </VerticalStackLayout>

                                <!-- Indicador de expandir/colapsar -->
                                <Label Text="{Binding Expandido, Converter={StaticResource BoolToExpandIconConverter}}"
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       TextColor="#2196F3"
                                       Margin="0,5,0,0">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HistorialPrestamosViewModel}}, Path=ToggleExpandirCommand}"
                                                             CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
