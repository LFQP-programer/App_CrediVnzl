<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_CrediVnzl.Pages.LoginAdminPage"
             Shell.NavBarIsVisible="False">

    <!-- Fondo degradado multicolor -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0" />
            <GradientStop Color="#F5A623" Offset="0.5" />
            <GradientStop Color="#FF8C42" Offset="0.8" />
            <GradientStop Color="#E74C3C" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="20,30,20,20" RowDefinitions="Auto,*,Auto">
        
        <!-- Header con botÃ³n volver -->
        <Button Grid.Row="0"
                Text="â† Volver"
                BackgroundColor="Transparent"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Clicked="OnVolverClicked"
                Margin="0,0,0,15"/>

        <!-- Contenido principal centrado -->
        <VerticalStackLayout Grid.Row="1" 
                             Spacing="20" 
                             VerticalOptions="Center"
                             HorizontalOptions="Fill">
            
            <!-- Solo logo en card blanca -->
            <Frame CornerRadius="20"
                   Padding="25,30,25,30"
                   HasShadow="True"
                   BackgroundColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="ðŸ’°" FontSize="60" HorizontalOptions="Center"/>
                    <Label Text="CrediVzla" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#2563EB"
                           HorizontalOptions="Center"/>
                    <Label Text="Administrador" 
                           FontSize="16" 
                           TextColor="#6B7280"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Formulario Admin mÃ¡s compacto -->
            <Frame CornerRadius="20"
                   Padding="25"
                   HasShadow="True"
                   BackgroundColor="White"
                   HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- Campo Usuario -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Usuario" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#333333"/>
                        <Frame CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="#F8F9FA"
                               BorderColor="#E9ECEF">
                            <Grid ColumnDefinitions="Auto,*" Padding="12,10">
                                <Label Grid.Column="0" 
                                       Text="ðŸ‘¤" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       TextColor="#2563EB"/>
                                <Entry Grid.Column="1"
                                       x:Name="UsuarioEntry" 
                                       Placeholder="Ingresa tu usuario" 
                                       Text="{Binding NombreUsuario}" 
                                       FontSize="15" 
                                       BackgroundColor="Transparent"
                                       Margin="8,0,0,0"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Campo ContraseÃ±a -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="ContraseÃ±a" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#333333"/>
                        <Frame CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="#F8F9FA"
                               BorderColor="#E9ECEF">
                            <Grid ColumnDefinitions="Auto,*" Padding="12,10">
                                <Label Grid.Column="0" 
                                       Text="ðŸ”’" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       TextColor="#2563EB"/>
                                <Entry Grid.Column="1"
                                       x:Name="PasswordEntry"
                                       Placeholder="Ingresa tu contraseÃ±a" 
                                       Text="{Binding Password}" 
                                       IsPassword="True" 
                                       FontSize="15" 
                                       BackgroundColor="Transparent"
                                       Margin="8,0,0,0"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Recordar datos -->
                    <HorizontalStackLayout Spacing="8" Margin="0,5,0,0">
                        <CheckBox IsChecked="{Binding RecordarMe}" Color="#2563EB"/>
                        <Label Text="Recordar mis datos" 
                               VerticalOptions="Center" 
                               TextColor="#666666" 
                               FontSize="14"/>
                    </HorizontalStackLayout>

                    <!-- BotÃ³n Ingresar -->
                    <Button Text="Ingresar" 
                            Command="{Binding LoginCommand}" 
                            BackgroundColor="#2563EB" 
                            TextColor="White" 
                            CornerRadius="15" 
                            HeightRequest="45" 
                            FontSize="16" 
                            FontAttributes="Bold"
                            Margin="0,15,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>

        <!-- Loading indicator -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding EstaOcupado}" 
                           IsVisible="{Binding EstaOcupado}" 
                           Color="White" 
                           HorizontalOptions="Center"
                           WidthRequest="25"
                           HeightRequest="25"
                           Margin="0,10,0,0"/>
    </Grid>
</ContentPage>