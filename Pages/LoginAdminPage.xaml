<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_CrediVnzl.Pages.LoginAdminPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7C3AED" Offset="0.0" />
            <GradientStop Color="#5B21B6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           Padding="30">

            <Frame CornerRadius="20" 
                   Padding="25" 
                   HasShadow="True"
                   BackgroundColor="White"
                   MaximumWidthRequest="400"
                   WidthRequest="360"
                   HorizontalOptions="Center">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Usuario Administrador" 
                           FontSize="14" 
                           FontAttributes="Bold"
                           TextColor="#7B1FA2"/>
                    <Frame CornerRadius="12" 
                           Padding="0" 
                           HasShadow="False"
                           BorderColor="#E0E0E0"
                           BackgroundColor="#F9FAFB">
                        <Entry Placeholder="Ingrese su usuario"
                               Text="{Binding NombreUsuario}"
                               Margin="15,10"/>
                    </Frame>

                    <Label Text="Contraseña" 
                           FontSize="14" 
                           FontAttributes="Bold"
                           TextColor="#7B1FA2"
                           Margin="0,10,0,0"/>
                    <Frame CornerRadius="12" 
                           Padding="0" 
                           HasShadow="False"
                           BorderColor="#E0E0E0"
                           BackgroundColor="#F9FAFB">
                        <Entry Placeholder="Ingrese su contraseña"
                               Text="{Binding Password}"
                               IsPassword="True"
                               Margin="15,10"/>
                    </Frame>

                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding RecordarMe}" Color="#7B1FA2"/>
                        <Label Text="Recordar mis datos" 
                               VerticalOptions="Center"
                               TextColor="#757575"
                               FontSize="13"/>
                    </HorizontalStackLayout>

                    <Button Text="INGRESAR AL SISTEMA"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#7B1FA2"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="55"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="0,20,0,0"
                            IsEnabled="{Binding EstaOcupado, Converter={StaticResource InvertedBoolConverter}}"/>

                    <ActivityIndicator IsRunning="{Binding EstaOcupado}"
                                       IsVisible="{Binding EstaOcupado}"
                                       Color="#7B1FA2"
                                       HorizontalOptions="Center"
                                       Margin="0,10,0,0"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
