<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_CrediVnzl.Pages.EnviarMensajesPage"
             Title="Mensajes WhatsApp"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{StaticResource Tertiary}"
             Shell.ForegroundColor="{StaticResource White}"
             Shell.TitleColor="{StaticResource White}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Tipo de Mensaje -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <Label Text="Tipo de Mensaje"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#212121"/>

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="📢 Recordatorios"
                                Command="{Binding SeleccionarTipoMensajeCommand}"
                                CommandParameter="Recordatorios"
                                BackgroundColor="{Binding TipoMensajeSeleccionado, Converter={StaticResource TipoMensajeToColorConverter}, ConverterParameter='Recordatorios'}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="70"
                                FontSize="12"/>

                        <Button Grid.Column="1"
                                Text="👤 Individual"
                                Command="{Binding SeleccionarTipoMensajeCommand}"
                                CommandParameter="Individual"
                                BackgroundColor="{Binding TipoMensajeSeleccionado, Converter={StaticResource TipoMensajeToColorConverter}, ConverterParameter='Individual'}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="70"
                                FontSize="12"/>

                        <Button Grid.Column="2"
                                Text="👥 Masivo"
                                Command="{Binding SeleccionarTipoMensajeCommand}"
                                CommandParameter="Masivo"
                                BackgroundColor="{Binding TipoMensajeSeleccionado, Converter={StaticResource TipoMensajeToColorConverter}, ConverterParameter='Masivo'}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="70"
                                FontSize="12"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- RECORDATORIOS -->
            <Frame BackgroundColor="#FFF9C4"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding EsRecordatorios}">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="📢" FontSize="20"/>
                        <Label Text="Envío Automático" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#212121"/>
                    </HorizontalStackLayout>
                    <Label Text="Se enviará un recordatorio automático a todos los clientes con pagos próximos (hoy y mañana)."
                           FontSize="14"
                           TextColor="#424242"/>
                    <Label Text="{Binding TotalMensajesRecordatorios, StringFormat='Total de mensajes: {0}'}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#F57C00"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Vista previa de recordatorios -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding EsRecordatorios}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📄 Vista previa del mensaje"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#212121"/>
                    
                    <Frame BackgroundColor="#E3F2FD"
                           CornerRadius="8"
                           Padding="10"
                           HasShadow="False"
                           IsVisible="{Binding TienePagosProximos}">
                        <Label Text="{Binding VistaPrevia}"
                               FontSize="14"
                               TextColor="#424242"/>
                    </Frame>

                    <Label Text="No hay pagos pendientes próximos"
                           FontSize="14"
                           TextColor="#757575"
                           HorizontalOptions="Center"
                           IsVisible="{Binding TienePagosProximos, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- INDIVIDUAL -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding EsIndividual}">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="👤" FontSize="20"/>
                        <Label Text="Seleccionar Cliente"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#212121"/>
                    </HorizontalStackLayout>

                    <Picker Title="Selecciona un cliente"
                            ItemsSource="{Binding Clientes}"
                            ItemDisplayBinding="{Binding NombreCompleto}"
                            SelectedItem="{Binding ClienteSeleccionado}"
                            BackgroundColor="#F5F5F5"
                            TextColor="#212121"/>

                    <Label Text="✉️ Mensaje"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#212121"/>

                    <Editor Text="{Binding MensajePersonalizado}"
                            Placeholder="Escribe tu mensaje aquí..."
                            HeightRequest="150"
                            BackgroundColor="#F5F5F5"
                            TextColor="#212121"/>
                    
                    <Label Text="💡 El mensaje será enviado únicamente al cliente seleccionado."
                           FontSize="12"
                           TextColor="#757575"
                           FontAttributes="Italic"/>
                </VerticalStackLayout>
            </Frame>

            <!-- MASIVO -->
            <Frame BackgroundColor="#FFE0B2"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding EsMasivo}">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="👥" FontSize="20"/>
                        <Label Text="Envío Masivo Personalizado" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#212121"/>
                    </HorizontalStackLayout>
                    <Label Text="Se enviará tu mensaje personalizado a todos los clientes con pagos próximos (hoy y mañana)."
                           FontSize="14"
                           TextColor="#424242"/>
                    <Label Text="{Binding TotalMensajesMasivos, StringFormat='Total de mensajes: {0}'}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#F57C00"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Mensaje personalizado masivo -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding EsMasivo}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="✉️ Mensaje Personalizado"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#212121"/>

                    <Editor Text="{Binding MensajeMasivo}"
                            Placeholder="Escribe tu mensaje aquí..."
                            HeightRequest="150"
                            BackgroundColor="#F5F5F5"
                            TextColor="#212121"/>
                    
                    <Label Text="💡 Se agregará el nombre de cada cliente al inicio del mensaje automáticamente."
                           FontSize="12"
                           TextColor="#757575"
                           FontAttributes="Italic"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Boton de envio -->
            <Button Text="{Binding TextoBotonEnviar}"
                    Command="{Binding EnviarMensajesCommand}"
                    BackgroundColor="{Binding ColorBotonEnviar}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    IsEnabled="{Binding PuedeEnviar}"
                    Margin="0,10,0,0"/>

            <!-- Información sobre automatización -->
            <Frame BackgroundColor="#E8F5E9"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="False"
                   BorderColor="#4CAF50">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="🚀" FontSize="20"/>
                        <Label Text="Proceso Semi-Automático"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#2E7D32"/>
                    </HorizontalStackLayout>
                    
                    <Label Text="✅ WhatsApp se abrirá automáticamente para cada cliente"
                           FontSize="13"
                           TextColor="#1B5E20"/>
                    <Label Text="✅ El mensaje estará prellenado y listo"
                           FontSize="13"
                           TextColor="#1B5E20"/>
                    <Label Text="⚡ Solo presiona ENVIAR en cada conversación"
                           FontSize="13"
                           TextColor="#1B5E20"
                           FontAttributes="Bold"/>
                    <Label Text="✅ Cambio automático entre conversaciones (500ms)"
                           FontSize="13"
                           TextColor="#1B5E20"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Información adicional sobre limitaciones -->
            <Frame BackgroundColor="#FFF3E0"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="False"
                   BorderColor="#FF9800">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="⚠️" FontSize="20"/>
                        <Label Text="Importante Saber"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#E65100"/>
                    </HorizontalStackLayout>
                    
                    <Label Text="• WhatsApp NO permite envío 100% automático por seguridad"
                           FontSize="12"
                           TextColor="#BF360C"/>
                    <Label Text="• Deberás presionar ENVIAR manualmente en cada mensaje"
                           FontSize="12"
                           TextColor="#BF360C"/>
                    <Label Text="• Los clientes sin teléfono serán omitidos automáticamente"
                           FontSize="12"
                           TextColor="#BF360C"/>
                    <Label Text="• Para envío 100% automático necesitarías WhatsApp Business API (de pago)"
                           FontSize="12"
                           TextColor="#BF360C"
                           FontAttributes="Italic"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Información sobre WhatsApp Business API -->
            <Frame BackgroundColor="#E3F2FD"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="False"
                   BorderColor="#2196F3">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="💼" FontSize="18"/>
                        <Label Text="¿Necesitas Envío Totalmente Automático?"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1565C0"/>
                    </HorizontalStackLayout>
                    
                    <Label Text="Para envío 100% automático necesitarías:"
                           FontSize="12"
                           TextColor="#0D47A1"
                           FontAttributes="Bold"/>
                    <Label Text="1️⃣ WhatsApp Business API (servicio oficial de pago)"
                           FontSize="11"
                           TextColor="#1976D2"/>
                    <Label Text="2️⃣ Twilio API para WhatsApp (servicio de terceros)"
                           FontSize="11"
                           TextColor="#1976D2"/>
                    <Label Text="3️⃣ Meta Business Suite (cuenta empresarial verificada)"
                           FontSize="11"
                           TextColor="#1976D2"/>
                    <Label Text="💰 Costo aproximado: $0.005 - $0.10 por mensaje enviado"
                           FontSize="11"
                           TextColor="#1976D2"
                           FontAttributes="Italic"
                           Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
