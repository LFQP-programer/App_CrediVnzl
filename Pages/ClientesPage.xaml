<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.ClientesPage"
             Title="Clientes"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*" Padding="0" RowSpacing="0">

        <!-- Header azul -->
        <Grid Grid.Row="0" BackgroundColor="#2563EB" Padding="20,40,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- BotÃ³n volver -->
            <Button Grid.Column="0"
                    Text="â†"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    FontAttributes="Bold"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    Padding="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Command="{Binding BackCommand}" />

            <!-- TÃ­tulo con contador -->
            <HorizontalStackLayout Grid.Column="1" 
                                   Spacing="8" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="15,0,0,0">
                <Label Text="Clientes"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="{Binding TotalClientes, StringFormat='({0})'}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       Opacity="0.8" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Buscador con botÃ³n agregar -->
        <Grid Grid.Row="1" Padding="20,15,20,10" BackgroundColor="#F5F5F5">
            <Frame BackgroundColor="White"
                   CornerRadius="25"
                   Padding="15,10"
                   HasShadow="True">
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                    <Label Grid.Column="0" 
                           Text="ðŸ”"
                           FontSize="20"
                           TextColor="#666666"
                           VerticalOptions="Center" />
                    <Entry Grid.Column="1"
                           Placeholder="Buscar por nombre o DNI..."
                           Text="{Binding SearchText}"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                    <!-- BotÃ³n Agregar circular amarillo -->
                    <Frame Grid.Column="2"
                           BackgroundColor="#F59E0B"
                           CornerRadius="22"
                           WidthRequest="44"
                           HeightRequest="44"
                           Padding="0"
                           HasShadow="False"
                           VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AddClienteCommand}" />
                        </Frame.GestureRecognizers>
                        <Label Text="+"
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>
                </Grid>
            </Frame>
        </Grid>

        <!-- Lista de Clientes -->
        <Grid Grid.Row="2" BackgroundColor="#F5F5F5">
            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding Clientes}"
                               Margin="20,0,20,20">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Padding="40"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                                <Label Text="ðŸ‘¥"
                                       FontSize="60"
                                       TextColor="#CCCCCC"
                                       HorizontalOptions="Center" />
                                <Label Text="No hay clientes registrados"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       TextColor="#666666"
                                       Margin="0,10,0,0" />
                                <Label Text="Toca el botÃ³n + para agregar un cliente"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       TextColor="#999999" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="12"
                                   Padding="20"
                                   Margin="0,0,0,12"
                                   HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientesViewModel}}, Path=EditClienteCommand}"
                                                         CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                                    <!-- Avatar circular azul -->
                                    <Frame Grid.Column="0"
                                           BackgroundColor="#2563EB"
                                           CornerRadius="25"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           Padding="0"
                                           HasShadow="False"
                                           VerticalOptions="Center">
                                        <Label Text="ðŸ‘¤"
                                               FontSize="24"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>
                                    
                                    <!-- InformaciÃ³n del cliente -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                        Spacing="4" 
                                                        VerticalOptions="Center">
                                        <!-- Nombre -->
                                        <Label Text="{Binding NombreCompleto, FallbackValue='Juan PÃ©rez'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1F2937" />
                                        
                                        <!-- DNI -->
                                        <Label Text="{Binding Cedula, StringFormat='DNI: {0}', FallbackValue='DNI: 72345678'}"
                                               FontSize="14"
                                               TextColor="#6B7280" />
                                        
                                        <!-- TelÃ©fono -->
                                        <Label Text="{Binding Telefono, StringFormat='+51{0}', FallbackValue='+51987654321'}"
                                               FontSize="14"
                                               TextColor="#6B7280" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>
    </Grid>
</ContentPage>
