<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.CalendarioPagosPage"
             Title="Calendario de Pagos"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#2196F3"
             Shell.ForegroundColor="White"
             Shell.TitleColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- Header -->
            <Grid BackgroundColor="#2196F3" Padding="20,10,20,20">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Calendario de Pagos"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label x:Name="lblSubtitulo"
                           FontSize="14"
                           TextColor="#E3F2FD" />
                </VerticalStackLayout>
            </Grid>

            <!-- Tarjetas de Resumen -->
            <Grid Padding="15,20" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total Mes -->
                <Border Grid.Row="0" Grid.Column="0"
                       BackgroundColor="White"
                       StrokeShape="RoundRectangle 15"
                       Padding="15"
                       StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.1"
                                Radius="8"
                                Offset="0,2" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“… Total Mes"
                               FontSize="12"
                               TextColor="#757575" />
                        <Label Text="{Binding Resumen.TotalMes}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                    </VerticalStackLayout>
                </Border>

                <!-- Esperado -->
                <Border Grid.Row="0" Grid.Column="1"
                       BackgroundColor="White"
                       StrokeShape="RoundRectangle 15"
                       Padding="15"
                       StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.1"
                                Radius="8"
                                Offset="0,2" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’µ Esperado"
                               FontSize="12"
                               TextColor="#757575" />
                        <Label Text="{Binding Resumen.MontoEsperado, StringFormat='S/{0:N0}'}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#212121" />
                    </VerticalStackLayout>
                </Border>

                <!-- Pendientes -->
                <Border Grid.Row="1" Grid.Column="0"
                       BackgroundColor="#FFF9C4"
                       StrokeShape="RoundRectangle 15"
                       Padding="15"
                       StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.1"
                                Radius="8"
                                Offset="0,2" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="â° Pendientes"
                               FontSize="12"
                               TextColor="#F57C00" />
                        <Label Text="{Binding Resumen.Pendientes}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#F57C00" />
                    </VerticalStackLayout>
                </Border>

                <!-- Vencidos -->
                <Border Grid.Row="1" Grid.Column="1"
                       BackgroundColor="#FFCDD2"
                       StrokeShape="RoundRectangle 15"
                       Padding="15"
                       StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.1"
                                Radius="8"
                                Offset="0,2" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="â— Vencidos"
                               FontSize="12"
                               TextColor="#D32F2F" />
                        <Label Text="{Binding Resumen.Vencidos}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#D32F2F" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Vista Calendario -->
            <Border Margin="15,0,15,15"
                    BackgroundColor="White"
                    Padding="20"
                    IsVisible="{Binding MostrarCalendario}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Offset="0,4" Radius="10" Opacity="0.2"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <!-- Navegacion -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Text="&lt;" BackgroundColor="Transparent"
                                TextColor="#2196F3"
                                Command="{Binding MesAnteriorCommand}" />
                        <Label x:Name="lblMesAnio"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" />
                        <Button Text="&gt;" Grid.Column="2"
                                BackgroundColor="Transparent"
                                TextColor="#2196F3"
                                Command="{Binding MesSiguienteCommand}" />
                    </Grid>

                    <!-- Dias -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*">
                        <Label Text="Do" Grid.Column="0" HorizontalOptions="Center"/>
                        <Label Text="Lu" Grid.Column="1" HorizontalOptions="Center"/>
                        <Label Text="Ma" Grid.Column="2" HorizontalOptions="Center"/>
                        <Label Text="Mi" Grid.Column="3" HorizontalOptions="Center"/>
                        <Label Text="Ju" Grid.Column="4" HorizontalOptions="Center"/>
                        <Label Text="Vi" Grid.Column="5" HorizontalOptions="Center"/>
                        <Label Text="Sa" Grid.Column="6" HorizontalOptions="Center"/>
                    </Grid>

                    <Grid x:Name="gridCalendario"
                          RowSpacing="5"
                          ColumnSpacing="5"/>
                </VerticalStackLayout>
            </Border>

            <!-- Lista de Pagos -->
            <VerticalStackLayout Padding="15,0,15,20" 
                                Spacing="15"
                                IsVisible="{Binding MostrarLista}">
                
                <CollectionView ItemsSource="{Binding PagosFiltrados}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Padding="20"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                                <Label Text="ðŸ“…"
                                       FontSize="60"
                                       HorizontalOptions="Center" />
                                <Label Text="No hay pagos programados"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       TextColor="#757575"
                                       Margin="0,10,0,0" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="White"
                                   StrokeShape="RoundRectangle 15"
                                   Padding="15"
                                   Margin="0,0,0,10"
                                   StrokeThickness="0">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Opacity="0.1"
                                            Radius="8"
                                            Offset="0,2" />
                                </Border.Shadow>
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Cliente -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding ClienteNombre}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#212121" />

                                    <!-- Estado Badge -->
                                    <Border Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{Binding Estado, Converter={StaticResource EstadoToColorConverter}}"
                                           StrokeShape="RoundRectangle 10"
                                           Padding="10,5"
                                           StrokeThickness="0">
                                        <Label Text="{Binding Estado}"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Border>

                                    <!-- Monto -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoPago, StringFormat='Monto: S/{0:N2}'}"
                                           FontSize="14"
                                           TextColor="#757575" />

                                    <!-- Fecha -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding FechaProgramada, StringFormat='ðŸ“… {0:dd/MM/yyyy}'}"
                                           FontSize="12"
                                           TextColor="#757575" />

                                    <!-- Boton Marcar Pagado -->
                                    <Button Grid.Row="2" Grid.Column="1"
                                            Text="âœ“ Pagado"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            FontSize="12"
                                            CornerRadius="10"
                                            Padding="15,5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarioPagosViewModel}}, Path=MarcarPagadoCommand}"
                                            CommandParameter="{Binding .}"
                                            IsVisible="{Binding Estado, Converter={StaticResource EsPendienteConverter}}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
