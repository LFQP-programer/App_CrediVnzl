<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:App_CrediVnzl.ViewModels"
             x:Class="App_CrediVnzl.Pages.CalendarioPagosPage"
             Title="Calendario de Pagos"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="{StaticResource Tertiary}"
             Shell.ForegroundColor="{StaticResource White}"
             Shell.TitleColor="{StaticResource White}">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- Tarjetas de Resumen -->
            <Grid Padding="15,20" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total Mes -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“… Total Mes"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}" />
                        <Label Text="{Binding Resumen.TotalMes}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Esperado -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="{StaticResource White}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’µ Esperado"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}" />
                        <Label Text="{Binding Resumen.MontoEsperado, StringFormat='${0:N0}'}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Pendientes -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="{StaticResource PrimaryLight}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="â° Pendientes"
                               FontSize="12"
                               TextColor="{StaticResource PrimaryDark}" />
                        <Label Text="{Binding Resumen.Pendientes}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryDark}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Vencidos -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="{StaticResource SecondaryLight}"
                       CornerRadius="20"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="â— Vencidos"
                               FontSize="12"
                               TextColor="{StaticResource SecondaryDark}" />
                        <Label Text="{Binding Resumen.Vencidos}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SecondaryDark}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Vista Calendario -->
            <Frame Margin="15,0,15,15"
                   BackgroundColor="{StaticResource White}"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   IsVisible="{Binding MostrarCalendario}">

                <VerticalStackLayout Spacing="15">

                    <!-- Navegacion -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Text="&lt;" 
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Tertiary}"
                                Command="{Binding MesAnteriorCommand}" />
                        <Label x:Name="lblMesAnio"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />
                        <Button Text="&gt;" 
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Tertiary}"
                                Command="{Binding MesSiguienteCommand}" />
                    </Grid>

                    <!-- Dias -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*">
                        <Label Text="Do" Grid.Column="0" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Lu" Grid.Column="1" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Ma" Grid.Column="2" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Mi" Grid.Column="3" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Ju" Grid.Column="4" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Vi" Grid.Column="5" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                        <Label Text="Sa" Grid.Column="6" HorizontalOptions="Center" TextColor="{StaticResource Gray600}" FontAttributes="Bold"/>
                    </Grid>

                    <Grid x:Name="gridCalendario"
                          RowSpacing="5"
                          ColumnSpacing="5"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de Pagos -->
            <VerticalStackLayout Padding="15,0,15,20" 
                                Spacing="15"
                                IsVisible="{Binding MostrarLista}">
                
                <CollectionView ItemsSource="{Binding PagosFiltrados}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Padding="20"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                                <Label Text="ðŸ“…"
                                       FontSize="60"
                                       HorizontalOptions="Center" />
                                <Label Text="No hay pagos programados"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       TextColor="{StaticResource Gray600}"
                                       Margin="0,10,0,0" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{StaticResource White}"
                                   CornerRadius="20"
                                   Padding="15"
                                   Margin="0,0,0,10"
                                   HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Cliente -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding ClienteNombre}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}" />

                                    <!-- Estado Badge -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{Binding Estado, Converter={StaticResource EstadoToColorConverter}}"
                                           CornerRadius="10"
                                           Padding="10,5"
                                           HasShadow="False">
                                        <Label Text="{Binding Estado}"
                                               TextColor="{StaticResource White}"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Frame>

                                    <!-- Monto -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding MontoPago, StringFormat='Monto: ${0:N2}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}" />

                                    <!-- Fecha -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding FechaProgramada, StringFormat='ðŸ“… {0:dd/MM/yyyy}'}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}" />

                                    <!-- Boton Marcar Pagado -->
                                    <Button Grid.Row="2" Grid.Column="1"
                                            Text="âœ“ Pagado"
                                            BackgroundColor="{StaticResource Success}"
                                            TextColor="{StaticResource White}"
                                            FontSize="12"
                                            CornerRadius="10"
                                            Padding="15,5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CalendarioPagosViewModel}}, Path=MarcarPagadoCommand}"
                                            CommandParameter="{Binding .}"
                                            IsVisible="{Binding Estado, Converter={StaticResource EsPendienteConverter}}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
