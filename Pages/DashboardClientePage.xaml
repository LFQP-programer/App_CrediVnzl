<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_CrediVnzl.Pages.DashboardClientePage"
             Title="Mi Dashboard"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header con nombre del cliente -->
            <Frame CornerRadius="15" Padding="20" BackgroundColor="#2196F3" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding NombreCliente, StringFormat='�Hola, {0}!'}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Button Text="Cerrar Sesi�n"
                            Command="{Binding CerrarSesionCommand}"
                            BackgroundColor="White"
                            TextColor="#2196F3"
                            CornerRadius="10"
                            HeightRequest="40"
                            FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tarjetas de resumen -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                
                <!-- Pr�stamos Activos -->
                <Frame Grid.Column="0" Grid.Row="0" CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Pr�stamos Activos" FontSize="12" TextColor="#757575"/>
                        <Label Text="{Binding PrestamosActivos}" FontSize="32" FontAttributes="Bold" TextColor="#2196F3"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Deuda Pendiente -->
                <Frame Grid.Column="1" Grid.Row="0" CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Deuda Pendiente" FontSize="12" TextColor="#757575"/>
                        <Label Text="{Binding DeudaPendiente, StringFormat='${0:N2}'}" FontSize="24" FontAttributes="Bold" TextColor="#F44336"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Pagado -->
                <Frame Grid.Column="0" Grid.Row="1" CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Total Pagado" FontSize="12" TextColor="#757575"/>
                        <Label Text="{Binding TotalPagado, StringFormat='${0:N2}'}" FontSize="24" FontAttributes="Bold" TextColor="#4CAF50"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Pr�ximo Pago -->
                <Frame Grid.Column="1" Grid.Row="1" CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Pr�ximo Pago" FontSize="12" TextColor="#757575"/>
                        <Label Text="{Binding ProximoPago, StringFormat='${0:N2}'}" FontSize="24" FontAttributes="Bold" TextColor="#FF9800"/>
                        <Label Text="{Binding FechaProximoPago, StringFormat='{0:dd/MM/yyyy}'}" FontSize="10" TextColor="#9E9E9E"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <!-- Mis Pr�stamos -->
            <Frame CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Mis Pr�stamos" FontSize="18" FontAttributes="Bold" TextColor="#212121"/>
                    
                    <CollectionView ItemsSource="{Binding MisPrestamos}">
                        <CollectionView.EmptyView>
                            <Label Text="No tiene pr�stamos activos" 
                                   TextColor="#9E9E9E" 
                                   HorizontalOptions="Center"
                                   Margin="0,20"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10" Padding="15" Margin="0,5" BackgroundColor="#F5F5F5" HasShadow="False">
                                    <VerticalStackLayout Spacing="8">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding FechaInicio, StringFormat='Pr�stamo del {0:dd/MM/yyyy}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#212121"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Estado}"
                                                   FontSize="12"
                                                   BackgroundColor="#4CAF50"
                                                   TextColor="White"
                                                   Padding="8,4"
                                                   HorizontalOptions="End"/>
                                        </Grid>
                                        
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <VerticalStackLayout Grid.Column="0" Spacing="3">
                                                <Label Text="Monto Inicial" FontSize="11" TextColor="#757575"/>
                                                <Label Text="{Binding MontoInicial, StringFormat='${0:N2}'}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold"
                                                       TextColor="#2196F3"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="1" Spacing="3">
                                                <Label Text="Pendiente" FontSize="11" TextColor="#757575"/>
                                                <Label Text="{Binding TotalAdeudado, StringFormat='${0:N2}'}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold"
                                                       TextColor="#F44336"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <ProgressBar Progress="{Binding PorcentajePagado, Converter={StaticResource PercentToDecimalConverter}}"
                                                     ProgressColor="#4CAF50"
                                                     HeightRequest="8"/>
                                        <Label Text="{Binding PorcentajePagado, StringFormat='Pagado: {0}%'}"
                                               FontSize="11"
                                               TextColor="#757575"
                                               HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Pr�ximos Pagos -->
            <Frame CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Pr�ximos Pagos Programados" FontSize="18" FontAttributes="Bold" TextColor="#212121"/>
                    
                    <CollectionView ItemsSource="{Binding ProximosPagos}">
                        <CollectionView.EmptyView>
                            <Label Text="No tiene pagos pendientes" 
                                   TextColor="#9E9E9E" 
                                   HorizontalOptions="Center"
                                   Margin="0,20"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10" Padding="12" Margin="0,5" BackgroundColor="#FFF3E0" HasShadow="False">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                        <Label Grid.Column="0"
                                               Text="??"
                                               FontSize="24"
                                               VerticalOptions="Center"/>
                                        <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                            <Label Text="{Binding FechaProgramada, StringFormat='{0:dd/MM/yyyy}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#212121"/>
                                            <Label Text="{Binding TipoPago, StringFormat='Pago de {0}'}"
                                                   FontSize="12"
                                                   TextColor="#757575"/>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="2"
                                               Text="{Binding MontoPago, StringFormat='${0:N2}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#FF9800"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- �ltimos Pagos Realizados -->
            <Frame CornerRadius="15" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="�ltimos Pagos Realizados" FontSize="18" FontAttributes="Bold" TextColor="#212121"/>
                    
                    <CollectionView ItemsSource="{Binding UltimosPagos}">
                        <CollectionView.EmptyView>
                            <Label Text="A�n no ha realizado pagos" 
                                   TextColor="#9E9E9E" 
                                   HorizontalOptions="Center"
                                   Margin="0,20"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10" Padding="12" Margin="0,5" BackgroundColor="#E8F5E9" HasShadow="False">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                        <Label Grid.Column="0"
                                               Text="?"
                                               FontSize="24"
                                               VerticalOptions="Center"/>
                                        <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                            <Label Text="{Binding FechaPago, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#212121"/>
                                            <Label Text="{Binding Nota}"
                                                   FontSize="11"
                                                   TextColor="#757575"
                                                   LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="2"
                                               Text="{Binding MontoTotal, StringFormat='${0:N2}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Bot�n de refrescar -->
            <Button Text="?? Refrescar"
                    Command="{Binding RefrescarCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
